{
    "name": "hindsight-mcp",
    "displayName": "Hindsight MCP",
    "description": "MCP server for AI-assisted coding with development history: git, tests, Copilot.",
    "version": "0.1.5",
    "publisher": "Rbfinch",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "AI",
        "Other"
    ],
    "keywords": [
        "mcp",
        "ai",
        "copilot",
        "git",
        "development-history"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "mcpServerDefinitionProviders": [
            {
                "id": "hindsight-mcp.servers",
                "label": "Hindsight MCP"
            }
        ],
        "configuration": {
            "title": "Hindsight MCP",
            "properties": {
                "hindsight.autoStart": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start hindsight-mcp server"
                },
                "hindsight.databasePath": {
                    "type": "string",
                    "default": "",
                    "description": "Custom path for the hindsight database (default: ~/.hindsight/hindsight.db)"
                },
                "hindsight.binaryPath": {
                    "type": "string",
                    "default": "",
                    "description": "Custom path to hindsight-mcp binary (leave empty for auto-download)"
                }
            }
        },
        "commands": [
            {
                "command": "hindsight.downloadBinary",
                "title": "Download Hindsight Binary",
                "category": "Hindsight"
            },
            {
                "command": "hindsight.showVersion",
                "title": "Show Hindsight Version",
                "category": "Hindsight"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Rbfinch/hindsight-mcp"
    },
    "homepage": "https://github.com/Rbfinch/hindsight-mcp#readme",
    "bugs": {
        "url": "https://github.com/Rbfinch/hindsight-mcp/issues"
    },
    "license": "MIT",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.102.0",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.2.2",
        "eslint": "^9.19.0",
        "glob": "^13.0.0",
        "mocha": "^11.7.5",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.53.0",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "tar": "^7.4.3"
    }
}
